" ~/.vimrc
colorscheme elflord

" \t and backspace are 4 spaces
set expandtab tabstop=4 shiftwidth=4 softtabstop=4 autoindent
set ignorecase smartcase incsearch
set nowrap 
set ruler 
set colorcolumn=81
set encoding=utf-8
highlight Comment ctermfg=green

" 10 lines always kept visible 
set scrolloff=10
filetype plugin indent on
syntax on
